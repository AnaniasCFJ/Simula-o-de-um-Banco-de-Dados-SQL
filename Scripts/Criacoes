CREATE TABLE Professor(

Codigo CHAR(9) NOT NULL,

RG CHAR(9),

CPF CHAR(11),

Titulacao VARCHAR(50),

PRIMARY KEY (Codigo),

FOREIGN KEY (Codigo) REFERENCES Pessoa(Codigo)

);



CREATE TABLE Escola(

Codigo CHAR(9) NOT NULL,

Nome VARCHAR(50),

CodCidade CHAR(9) NOT NULL,

CodProfDir CHAR(9) NOT NULL,

PRIMARY KEY (Codigo),

FOREIGN KEY (CodCidade) REFERENCES Cidade(Codigo), FOREIGN KEY (CodProfDir) REFERENCES Professor(Codigo) );


CREATE TABLE Turma(

Codigo CHAR(9) NOT NULL,

Nome VARCHAR(50),

CodEscola CHAR(9),

PRIMARY KEY (Codigo),

FOREIGN KEY (CodEscola) REFERENCES Escola(Codigo)

);



CREATE TABLE Aluno(

Codigo CHAR(9) NOT NULL,

Matricula CHAR(20),

DataNasc CHAR(10),

CodTurma CHAR(9) NOT NULL,

PRIMARY KEY (Codigo),

FOREIGN KEY (Codigo) REFERENCES Pessoa(Codigo), FOREIGN KEY (CodTurma) REFERENCES Turma(Codigo) );


CREATE TABLE Contato(

Nome VARCHAR(50) NOT NULL,

CodAluno CHAR(9) NOT NULL,

Telefone CHAR(11),

PRIMARY KEY (Nome, CodAluno),

FOREIGN KEY (CodAluno) REFERENCES Aluno(Codigo)

);



CREATE TABLE AdmDisc(

CodProf CHAR(9) NOT NULL,

CodDisc CHAR(9) NOT NULL,

CodTurma CHAR(9),

PRIMARY KEY (CodProf, CodDisc),

FOREIGN KEY (CodProf) REFERENCES Professor(Codigo),

FOREIGN KEY (CodDisc) REFERENCES Disciplina(Codigo),

FOREIGN KEY (CodTurma) REFERENCES Turma(Codigo)

);



CREATE TABLE Pessoa(

Codigo CHAR(9) NOT NULL,

Nome VARCHAR(50),

Telefone CHAR(11),

CodCidade CHAR(9) NOT NULL,

PRIMARY KEY (Codigo),

FOREIGN KEY (CodCidade) REFERENCES Cidade(Codigo)

);



CREATE TABLE Disciplina(

Codigo CHAR(9) NOT NULL,

Nome VARCHAR(50),

PRIMARY KEY (Codigo)

);



CREATE TABLE Cidade(

Codigo CHAR(9) NOT NULL,

Nome VARCHAR(50),

PRIMARY KEY (Codigo)

);
